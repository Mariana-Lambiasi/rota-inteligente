import os, math, random
import pandas as pd
import numpy as np
import networkx as nx
from sklearn.cluster import KMeans
import matplotlib.pyplot as plt
import folium
from datetime import datetime
from IPython.display import HTML, display

out_dir = '/content/rota_inteligente_outputs/'
os.makedirs(out_dir, exist_ok=True)

# 1) Gerar nodes sintéticos
random.seed(42)
np.random.seed(42)
n_nodes = 30
center_lat, center_lon = -23.55, -46.63
nodes = []
for i in range(1, n_nodes+1):
    lat = center_lat + (np.random.rand()-0.5)*0.08
    lon = center_lon + (np.random.rand()-0.5)*0.08
    nodes.append({'id': i, 'label': f'P{i}', 'latitude': lat, 'longitude': lon})
nodes_df = pd.DataFrame(nodes)
nodes_csv = os.path.join(out_dir, 'nodes.csv')
nodes_df.to_csv(nodes_csv, index=False)

# 2) Gerar edges
def haversine_km(lat1, lon1, lat2, lon2):
    R = 6371.0
    phi1, phi2 = math.radians(lat1), math.radians(lat2)
    dphi = math.radians(lat2-lat1)
    dlambda = math.radians(lon2-lon1)
    a = math.sin(dphi/2)**2 + math.cos(phi1)*math.cos(phi2)*math.sin(dlambda/2)**2
    return 2*R*math.asin(math.sqrt(a))

edges = []
for i,a in nodes_df.iterrows():
    for j,b in nodes_df.iterrows():
        if a.id < b.id:
            d = haversine_km(a.latitude, a.longitude, b.latitude, b.longitude)
            t = d/30*60  # minutes, speed 30 km/h
            edges.append({'source': int(a.id), 'target': int(b.id), 'distance_km': d, 'time_min': t})
edges_df = pd.DataFrame(edges)
edges_csv = os.path.join(out_dir, 'edges.csv')
edges_df.to_csv(edges_csv, index=False)

# 3) Gerar deliveries
n_deliveries = 12
deliver_nodes = nodes_df.sample(n_deliveries, random_state=1).copy().reset_index(drop=True)
deliveries = []
now = datetime.now().strftime('%Y-%m-%d %H:%M')
for idx, r in deliver_nodes.iterrows():
    deliveries.append({'id': idx+1, 'node_id': int(r['id']), 'order_time': now, 'demand': 1, 'priority': 0})
deliveries_df = pd.DataFrame(deliveries)
deliveries_csv = os.path.join(out_dir, 'deliveries.csv')
deliveries_df.to_csv(deliveries_csv, index=False)

# 4) Build graph
G = nx.Graph()
for _, r in nodes_df.iterrows():
    G.add_node(int(r['id']), latitude=float(r['latitude']), longitude=float(r['longitude']), label=r['label'])
for _, r in edges_df.iterrows():
    G.add_edge(int(r['source']), int(r['target']), distance=float(r['distance_km']), time=float(r['time_min']))

# 5) Clustering deliveries with KMeans
coords = []
for _, row in deliveries_df.iterrows():
    node = nodes_df[nodes_df['id']==row['node_id']].iloc[0]
    coords.append([node['latitude'], node['longitude']])
coords = np.array(coords)
k = min(3, len(coords))  # 3 clusters (ajuste se quiser)
kmeans = KMeans(n_clusters=k, random_state=0).fit(coords)
deliveries_df['cluster'] = kmeans.labels_

# 6) pairwise shortest path distances
pairwise_dist = dict(nx.all_pairs_dijkstra_path_length(G, weight='distance'))

# 7) Routes per cluster
depot = 1
routes = []
metrics = []
total_distance = 0.0
total_time = 0.0

for cl in sorted(deliveries_df['cluster'].unique()):
    cluster_rows = deliveries_df[deliveries_df['cluster']==cl].copy()
    nodes_list = [int(x) for x in cluster_rows['node_id'].tolist()]
    current = depot
    route_order = [depot]
    remaining = nodes_list.copy()
    while remaining:
        nearest = min(remaining, key=lambda nid: pairwise_dist[current][nid])
        route_order.append(nearest)
        remaining.remove(nearest)
        current = nearest
    route_order.append(depot)
    dist = 0.0
    time_min = 0.0
    for i in range(len(route_order)-1):
        a,b = route_order[i], route_order[i+1]
        d = pairwise_dist[a][b]
        path_nodes = nx.shortest_path(G, source=a, target=b, weight='distance')
        t = 0.0
        for u,v in zip(path_nodes[:-1], path_nodes[1:]):
            t += G[u][v]['time']
        dist += d
        time_min += t
    total_distance += dist
    total_time += time_min
    metrics.append({'cluster': int(cl), 'n_deliveries': len(cluster_rows), 'route_distance_km': dist, 'route_time_min': time_min})
    for order_i, nid in enumerate(route_order):
        node_info = nodes_df[nodes_df['id']==nid].iloc[0]
        routes.append({'cluster': int(cl), 'order': order_i+1, 'node_id': int(nid), 'latitude': float(node_info['latitude']), 'longitude': float(node_info['longitude'])})

routes_df = pd.DataFrame(routes)
routes_csv = os.path.join(out_dir, 'rota_result.csv')
routes_df.to_csv(routes_csv, index=False)
metrics_df = pd.DataFrame(metrics)

# 8) Folium map
m = folium.Map(location=[center_lat, center_lon], zoom_start=13)
for _, r in nodes_df.iterrows():
    folium.CircleMarker([r['latitude'], r['longitude']], radius=3, popup=f"ID:{r['id']}", color='gray', fill=True).add_to(m)
colors = ['red','blue','green','purple','orange','cadetblue']
for _, r in deliveries_df.iterrows():
    node = nodes_df[nodes_df['id']==r['node_id']].iloc[0]
    folium.CircleMarker([node['latitude'], node['longitude']], radius=6, popup=f"Del:{r['id']} C:{r['cluster']}", color=colors[int(r['cluster'])%len(colors)], fill=True).add_to(m)
for cl in sorted(deliveries_df['cluster'].unique()):
    rrows = routes_df[routes_df['cluster']==cl].sort_values('order')
    coords_list = rrows[['latitude','longitude']].values.tolist()
    folium.PolyLine(coords_list, color=colors[int(cl)%len(colors)], weight=4.5, opacity=0.8).add_to(m)
map_html = os.path.join(out_dir, 'map_route.html')
m.save(map_html)

# 9) Graph diagram
plt.figure(figsize=(8,8))
pos = {int(r['id']):(r['longitude'], r['latitude']) for _, r in nodes_df.iterrows()}
nx.draw_networkx_nodes(G, pos, node_size=50, node_color='lightblue')
nx.draw_networkx_edges(G, pos, alpha=0.2)
nx.draw_networkx_labels(G, pos, {n: n for n in G.nodes()}, font_size=8)
plt.title('Grafo - nós e arestas (sintético)')
png_path = os.path.join(out_dir, 'graph_diagram.png')
plt.savefig(png_path, dpi=200, bbox_inches='tight')
plt.close()

# 10) Summary
summary_txt = os.path.join(out_dir, 'report_summary.txt')
with open(summary_txt, 'w') as f:
    f.write('Rota Inteligente - Resumo de execução (sintético)\\n\\n')
    f.write(f'Número de nós: {len(nodes_df)}\\n')
    f.write(f'Número de entregas: {len(deliveries_df)}\\n')
    f.write(f'Número de clusters (k): {k}\\n')
    f.write(f'Distância total (km): {total_distance:.3f}\\n')
    f.write(f'Tempo total estimado (min): {total_time:.2f}\\n\\n')
    f.write('Métricas por cluster:\\n')
    f.write(metrics_df.to_csv(index=False))

# 11) Prints and display small previews + links
print('Arquivos gerados em:', out_dir)
print(' - nodes.csv ->', nodes_csv)
print(' - edges.csv ->', edges_csv)
print(' - deliveries.csv ->', deliveries_csv)
print(' - rota_result.csv ->', routes_csv)
print(' - map_route.html ->', map_html)
print(' - graph_diagram.png ->', png_path)
print(' - report_summary.txt ->', summary_txt)

print('\\nPreview deliveries:')
display(deliveries_df.head())

print('\\nPreview routes (primeiras linhas):')
display(routes_df.head(12))

print('\\nMetrics per cluster:')
display(metrics_df)

# 12) Mostrar o mapa
display(HTML(f"<h4>Mapa interativo (salvo em {map_html})</h4><iframe src='{map_html}' width='100%' height='400'></iframe>"))







